{
	"include": ["src", "test"],
	"compilerOptions": {
		"baseUrl": "./",
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"module": "NodeNext",
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"declaration": true,
		"noEmitOnError": true,
		/* Strictness */
		"strict": true,
		"noImplicitOverride": true,
		"allowSyntheticDefaultImports": true,
		"stripInternal": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"paths": {
			"~/*": ["src/*"]
		}
	}
}
