{
	"name": "@monolayer/factor-four",
	"version": "0.1.4",
	"license": "MIT",
	"type": "module",
	"description": "Backing services as first-class citizens in TypeScript applications",
	"author": "Marcos Essindi <marcessindi@me.com>",
	"homepage": "https://github.com/dunkelbraun/factor-four",
	"bugs": "https://github.com/dunkelbraun/factor-four/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/dunkelbraun/factor-four"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"prebuild": "rm -rf dist/*",
		"build": "tsc -b tsconfig.build.esm.json",
		"postbuild": "npm run alias",
		"alias": "tsc-alias -p tsconfig.build.esm.json --outDir dist --verbose",
		"check": "npm run check:format && npm run check:lint && npm run check:skott",
		"check:format": "prettier --check .",
		"check:lint": "npx eslint .",
		"check:skott": "skott --displayMode=file-tree --showCircularDependencies --no-trackTypeOnlyDependencies --cwd src",
		"format": "prettier --write .",
		"prepack": "npm run check && npm run build && rm -rf build && mkdir build",
		"test": "vitest --run",
		"test:watch": "vitest --ui --coverage --no-open",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"typedoc": "typedoc --docsRoot docs/reference",
		"typedoc:watch": "npm run typedoc -- --watch",
		"predocs": "npm run typedoc",
		"docs": "npm-run-all --parallel typedoc:watch docs:dev",
		"unpublish:local": "npm unpublish --registry http://localhost:4873 @monolayer/factor-four -f",
		"publish:local": "npm publish --registry http://localhost:4873"
	},
	"devDependencies": {
		"@aws-sdk/client-ses": "^3.650.0",
		"@eslint/compat": "^1.1.1",
		"@types/memcached": "^2.2.10",
		"@types/node": "^20.16.5",
		"@types/nodemailer": "^6.4.15",
		"@typescript-eslint/eslint-plugin": "^8.3.0",
		"@typescript-eslint/parser": "^8.3.0",
		"@vitest/coverage-istanbul": "^2.0.5",
		"@vitest/coverage-v8": "^2.0.5",
		"@vitest/ui": "^2.0.5",
		"dotenv": "^16.4.5",
		"eslint": "^9.9.1",
		"eslint-config-prettier": "^9.1.0",
		"memcache-client": "^1.0.5",
		"memcached": "^2.2.2",
		"mermaid": "^10.9.1",
		"nodemailer": "^6.9.15",
		"npm-run-all": "^4.1.5",
		"picomatch": "^2.3.1",
		"prettier": "^3.3.3",
		"prettier-plugin-organize-imports": "^4.0.0",
		"redis": "^4.7.0",
		"search-insights": "^2.17.2",
		"skott": "^0.35.2",
		"tsc-alias": "^1.8.10",
		"tsx": "^4.19.1",
		"type-fest": "^4.25.0",
		"type-testing": "^0.2.0",
		"typedoc": "^0.26.5",
		"typedoc-plugin-markdown": "^4.2.3",
		"typedoc-vitepress-theme": "^1.0.1",
		"typescript": "^5.5.4",
		"vite-plugin-dynamic-import": "^1.5.0",
		"vite-tsconfig-paths": "^5.0.1",
		"vitepress": "^1.3.4",
		"vitepress-plugin-mermaid": "^2.0.16",
		"vitepress-sidebar": "^1.24.2",
		"vitest": "^2.0.5"
	},
	"dependencies": {
		"@epic-web/remember": "^1.1.0",
		"case-anything": "^3.1.0",
		"envfile": "^7.1.0",
		"get-port": "^7.1.0",
		"testcontainers": "^10.13.1",
		"@aws-sdk/client-ses": "^3.650.0",
		"memcache-client": "^1.0.5",
		"memcached": "^2.2.2",
		"redis": "^4.7.0"
	},
	"peerDependencies": {
		"@aws-sdk/client-ses": "^3.650.0",
		"memcache-client": "^1.0.5",
		"memcached": "^2.2.2",
		"redis": "^4.7.0"
	}
}
